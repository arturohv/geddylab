<div class="hero-unit">
  <h2>Lista de Usuarios</h2>
  <%- linkTo('Crear nuevo usuario', addUserPath, {class: 'btn pull-right'}); %>
</div>

<div id="users-list">
<% if (users) { %>
<% for (var i = 0, ii = users.length; i < ii; i++) { %>
  <div class="row list-item" id="user-<%= users[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(users[i].login, userPath(users[i].id)); %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>